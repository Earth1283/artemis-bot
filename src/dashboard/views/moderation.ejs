<%- include('header') %>

    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <div>
            <h1>Moderation Audit Log</h1>
            <p style="color: var(--text-secondary); margin: 0;">View and manage user infractions.</p>
        </div>
    </div>

    <div class="card" style="overflow-x: auto;">
        <table style="width: 100%; border-collapse: collapse; color: var(--text-primary);">
            <thead>
                <tr style="text-align: left; border-bottom: 1px solid var(--border);">
                    <th style="padding: 1rem;">Type</th>
                    <th style="padding: 1rem;">User ID</th>
                    <th style="padding: 1rem;">Reason</th>
                    <th style="padding: 1rem;">Moderator</th>
                    <th style="padding: 1rem;">Date</th>
                    <th style="padding: 1rem;">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (infractions.length===0) { %>
                    <tr>
                        <td colspan="6" style="padding: 1rem; text-align: center; color: var(--text-secondary);">No
                            infractions found.</td>
                    </tr>
                    <% } else { %>
                        <% infractions.forEach(infraction=> { %>
                            <tr style="border-bottom: 1px solid rgba(51, 65, 85, 0.5);">
                                <td style="padding: 1rem;">
                                    <% if (infraction.type==='warn' ) { %>
                                        <span
                                            style="background: rgba(234, 179, 8, 0.1); border: 1px solid rgba(234, 179, 8, 0.2); color: #facc15; padding: 0.25rem 0.5rem; border-radius: 9999px; font-size: 0.7rem; text-transform: uppercase; font-weight: 600; letter-spacing: 0.05em;">WARN</span>
                                        <% } else if (infraction.type==='kick' ) { %>
                                            <span
                                                style="background: rgba(249, 115, 22, 0.1); border: 1px solid rgba(249, 115, 22, 0.2); color: #fb923c; padding: 0.25rem 0.5rem; border-radius: 9999px; font-size: 0.7rem; text-transform: uppercase; font-weight: 600; letter-spacing: 0.05em;">KICK</span>
                                            <% } else if (infraction.type==='ban' ) { %>
                                                <span
                                                    style="background: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.2); color: #f87171; padding: 0.25rem 0.5rem; border-radius: 9999px; font-size: 0.7rem; text-transform: uppercase; font-weight: 600; letter-spacing: 0.05em;">BAN</span>
                                                <% } else { %>
                                                    <span
                                                        style="background: rgba(99, 102, 241, 0.1); border: 1px solid rgba(99, 102, 241, 0.2); color: #818cf8; padding: 0.25rem 0.5rem; border-radius: 9999px; font-size: 0.7rem; text-transform: uppercase; font-weight: 600; letter-spacing: 0.05em;">
                                                        <%= infraction.type.toUpperCase() %>
                                                    </span>
                                                    <% } %>
                                </td>
                                <td
                                    style="padding: 1rem; font-family: 'Monaco', monospace; font-size: 0.85rem; color: var(--text-secondary);">
                                    <%= infraction.user_id %>
                                </td>
                                <td style="padding: 1rem;">
                                    <%= infraction.reason %>
                                </td>
                                <td
                                    style="padding: 1rem; font-family: 'Monaco', monospace; font-size: 0.85rem; color: var(--text-secondary);">
                                    <%- infraction.moderator_id %></td>
                                <td style="padding: 1rem; color: var(--text-secondary); white-space: nowrap;">
                                    <%= new Date(infraction.timestamp).toLocaleString() %>
                                </td>
                                <td style="padding: 1rem;">
                                    <form action="/api/infractions/delete/<%= infraction.id %>" method="POST"
                                        onsubmit="return confirm('Are you sure you want to delete this log?');"
                                        style="margin: 0;">
                                        <button type="submit" class="btn"
                                            style="background: transparent; border: 1px solid rgba(239, 68, 68, 0.3); color: #f87171; font-size: 0.75rem; padding: 0.3rem 0.6rem;">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            <% }); %>
                                <% } %>
            </tbody>
        </table>
    </div>

    <%- include('footer') %>