<%- include('header') %>

    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <div>
            <h1>Configuration</h1>
            <p style="color: var(--text-secondary); margin: 0;">Edit your bot's messages and settings.</p>
        </div>
    </div>

    <% if (success) { %>
        <div class="alert-success">
            Settings saved successfully! Restart the bot to apply config changes (if messages.yml, it applies instantly
            on next read).
        </div>
        <% } %>

            <div class="card">
                <h3 style="margin-bottom: 1rem;">Messages Editor (messages.yml)</h3>
                <form action="/api/save" method="POST">
                    <textarea name="content" spellcheck="false"><%= messagesContent %></textarea>
                    <div style="margin-top: 1.5rem; display: flex; justify-content: flex-end;">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>

            <%- include('footer') %>